<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension
          id="unused.methods.marker"
          name="Unused Method"
          point="org.eclipse.core.resources.markers">
       <super
          type="org.eclipse.core.resources.problemmarker">
       </super>
       <persistent
          value="true">
       </persistent>
    </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="unused.methods.FindUnusedMethodsInJavaProjectContribution"
            objectClass="org.eclipse.jdt.core.IJavaProject">
         <action
               class="unused.methods.FindAndMarkUnusedMethodsInJavaProjects"
               id="unused.methods.FindAndMarkUnusedMethodsInJavaProjects"
               label="Find Unused Methods">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="unused.methods.ClearUnusedMethodMarkersContribution"
            objectClass="org.eclipse.jdt.core.IJavaElement">
         <action
               class="unused.methods.ClearUnusedMethodMarkers"
               id="unused.methods.ClearUnusedMethodMarkers"
               label="Clear Unused Methods Markers">
         </action>
      </objectContribution>
   </extension>
</plugin>
